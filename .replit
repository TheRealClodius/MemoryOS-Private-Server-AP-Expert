modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_and_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Remote MCP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP 2.0 Remote Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MemoryOS Production Server"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install mcp openai numpy faiss-cpu pydantic"

[[workflows.workflow]]
name = "install_and_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install mcp openai numpy faiss-cpu pydantic"

[[workflows.workflow]]
name = "Remote MCP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python mcp_remote_server.py"
waitForPort = 5000

[[workflows.workflow]]
name = "MCP 2.0 Remote Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5001 python mcp_remote_server.py"
waitForPort = 5001

[[workflows.workflow]]
name = "MemoryOS Production Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python deploy_server.py"
waitForPort = 5000

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "python deploy_server.py"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5002
externalPort = 3002
