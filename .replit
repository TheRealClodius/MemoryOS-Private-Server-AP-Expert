modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_and_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MemoryOS HTTP Server"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install mcp openai numpy faiss-cpu pydantic"

[[workflows.workflow]]
name = "install_and_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install mcp openai numpy faiss-cpu pydantic"

[[workflows.workflow]]
name = "MemoryOS HTTP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 python run.py"
waitForPort = 5000

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "python deploy_server.py"]

[[ports]]
localPort = 5000
externalPort = 80
